                                    <Label Text="{Binding Release_Year}" TextColor="Gray" FontSize="8"></Label>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>-->

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>